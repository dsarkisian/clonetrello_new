<h1>Edit <%=@card.name%></h1>

<%= form_with(model: [@board, @list, @card], local: true) do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
</div>
<br>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description, required: false, autofocus: false %>
</div>
<br>
<%= f.submit %>

<% end %>